//Sorting and Two pointer.
#include <bits/stdc++.h>
using namespace std;
#define int long long

void solve() {
    int n,x;
    cin>>n>>x;
    
    vector<int> p(n) ;
    for(int i=0 ; i<n ; i++) cin>>p[i];

    sort(p.begin() , p.end());

    int ans=0;
    int i=0 , j=n-1;
    while(i<j){
        if(i==j){
            ans++;
            i++;
            j--;
        }else if(p[i]+p[j] <= x){
            ans++;
            i++;
            j--;
        }else{
            ans++;
            j--;
        }
    }

    cout<<ans<<'\n';
}

signed main() {
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

    solve();
    
}
