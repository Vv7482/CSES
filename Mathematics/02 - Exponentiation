#include <bits/stdc++.h>
using namespace std;
#define int long long
const int MOD = 1e9+7;

int POW(int x , int a){
	if(a==0) return 1;
	if(a%2){
		return (x * POW((x*x)%MOD,a/2))%MOD;
	}else{
		return POW((x*x)%MOD,a/2);
	}
}

void solve() {
	int t;
	cin>>t;
	while(t--){
		int a,b;
		cin>>a>>b;
		cout<<POW(a,b)<<'\n';
	}
	return;
}
 
signed main() {
    	ios_base::sync_with_stdio(0);
    	cin.tie(0);
    	cout.tie(0);
 
    	solve();
		return 0;
}
