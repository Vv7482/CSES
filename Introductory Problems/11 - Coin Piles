#include<bits/stdc++.h>
using namespace std;
#define int long long int
const int MOD = 1e9+7;

void solve(){
    int x,y;
    cin>>x>>y;
    if(x<y) swap(x,y);

    if(((x+y)%3==0) && 2*y>=x){
        cout<<"YES\n";
    }else{
        cout<<"NO\n";
    }
    return;
}

signed main(){
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    
    int t;
    cin>>t;
    while(t--){
        solve(); 
    }           
}
