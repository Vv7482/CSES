#include<bits/stdc++.h>
using namespace std;

void solve(){
    int n;
    cin>>n;
    vector<int> a(n);
    for(int i=0 ; i<n ; i++) cin>>a[i];

    long long ans=0;
    int maxi = a[0];
    for(int i=0 ; i<n ; i++){
        if(a[i] >= maxi){maxi = a[i];continue;}
        ans += (maxi-a[i]);
    }

    cout<<ans<<'\n';
    return;
}

signed main(){
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    
    solve();        
}
