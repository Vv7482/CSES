#include<bits/stdc++.h>
using namespace std;
#define int long long int
const int MOD = 1e9+7;
 
int power(int n){
    if(n==1) return 2;
 
    return (2*power(n-1))%MOD;
}
 
void solve(){
    int n;
    cin>>n;
 
    cout<<power(n)<<'\n';    
    return;
}
 
signed main(){
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    
    solve();                
}
