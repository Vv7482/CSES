#include<bits/stdc++.h>
using namespace std;
#define int long long int

void solve(){
    int x,y;
    cin>>x>>y;

    if(x==1){
        if(y%2){
            cout<<y*y<<'\n';
        }else{
            cout<<(y-1)*(y-1)<<'\n';
        }
    }else if(y==1){
        if(!(x%2)){
            cout<<x*x<<'\n';
        }else{
            cout<<(x-1)*(x-1)<<'\n';
        }
    }else if(x==y){
        cout<<x*x-x+1<<'\n';
    }else if(x<y){
        if(y%2){
            cout<<y*y-x+1<<'\n';
        }else{
            cout<<(y-1)*(y-1)+x<<'\n';
        }
    }else if(x>y){
        if(!(x%2)){
            cout<<x*x-y+1<<'\n';
        }else{
            cout<<(x-1)*(x-1)+y<<'\n';
        }
    }
    return;
}

signed main(){
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    
    int t;
    cin>>t;
    while(t--){
        solve();    
    }
            
}
